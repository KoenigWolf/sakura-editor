{
  "name": "Zen Editor",
  "short_name": "Zen",
  "description": "無料で使えるオンラインテキストエディタ。MacBook・Windows対応。オフラインでも動作します。",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#0a0a0a",
  "orientation": "any",
  "categories": ["productivity", "utilities", "developer tools"],
  "lang": "ja",
  "dir": "ltr",
  "id": "zen-editor",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon-72.svg",
      "sizes": "72x72",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-96.svg",
      "sizes": "96x96",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-128.svg",
      "sizes": "128x128",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-152.svg",
      "sizes": "152x152",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon-384.svg",
      "sizes": "384x384",
      "type": "image/svg+xml"
    },
    {
      "src": "/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-wide.svg",
      "sizes": "1280x720",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Zen Editor - デスクトップ画面"
    },
    {
      "src": "/screenshot-narrow.svg",
      "sizes": "390x844",
      "type": "image/svg+xml",
      "form_factor": "narrow",
      "label": "Zen Editor - モバイル画面"
    }
  ],
  "shortcuts": [
    {
      "name": "新規ファイル",
      "short_name": "新規",
      "description": "新しいファイルを作成",
      "url": "/?action=new",
      "icons": [{"src": "/icon-new-file.svg", "sizes": "96x96", "type": "image/svg+xml"}]
    },
    {
      "name": "ファイルを開く",
      "short_name": "開く",
      "description": "ファイルを開く",
      "url": "/?action=open",
      "icons": [{"src": "/icon-open-file.svg", "sizes": "96x96", "type": "image/svg+xml"}]
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt", ".text", ".log"],
        "text/html": [".html", ".htm"],
        "text/css": [".css", ".scss", ".less"],
        "text/javascript": [".js", ".mjs", ".jsx"],
        "application/json": [".json"],
        "text/markdown": [".md", ".markdown"],
        "text/xml": [".xml"],
        "text/yaml": [".yaml", ".yml"],
        "application/x-typescript": [".ts", ".tsx"],
        "text/x-python": [".py"],
        "text/x-java-source": [".java"],
        "text/x-c": [".c", ".h"],
        "text/x-c++src": [".cpp", ".hpp", ".cc"],
        "text/x-ruby": [".rb"],
        "text/x-go": [".go"],
        "text/x-rust": [".rs"],
        "text/x-php": [".php"],
        "text/x-sql": [".sql"],
        "text/x-shellscript": [".sh", ".bash", ".zsh"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/*", "application/json", ".txt", ".md", ".js", ".ts", ".html", ".css"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 480
  }
}
